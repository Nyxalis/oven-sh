{
    "name": "Bun",
    "image": "ghcr.io/nhaef/devcontainer-bun:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "christian-kohler.path-intellisense"
            ]
        }
    },
    "runArgs": [
      "--userns=keep-id"
    ],
    "containerEnv": {
      "HOME": "/home/node"
    },
    "shutdownAction": "stopContainer"
}
